generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../quizz.db"
}

model Joueur {
  id            Int      @id @default(autoincrement())
  username      String   @unique
  password      String
  argent        Int
  avatar        String
  partiesJouees Partie[]
}

model Partie {
  id              Int     @id @default(autoincrement())
  joueurId        Int
  nbQuestions     Int
  indicesUtilises Boolean
  joueur          Joueur  @relation(fields: [joueurId], references: [id])
}
